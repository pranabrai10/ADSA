#include <stdio.h>
#include <string.h>
#define d 256   // number of characters in the input alphabet

#define PRIME 101  // A prime number for Rabin-Karp hashing

// --------------------------- KMP ALGORITHM ---------------------------

// Function to create longest prefix-suffix (LPS) array
void computeLPSArray(char *pat, int M, int *lps) {
    int len = 0; // length of the previous longest prefix suffix
    lps[0] = 0;  // lps[0] is always 0
    int i = 1;

    while (i < M) {
        if (pat[i] == pat[len]) {
            len++;
            lps[i] = len;
            i++;
        } else {
            if (len != 0)
                len = lps[len - 1];
            else {
                lps[i] = 0;
                i++;
            }
        }
    }
}

// KMP Pattern Search
void KMPSearch(char *pat, char *txt) {
    int M = strlen(pat);
    int N = strlen(txt);

    int lps[M];
    computeLPSArray(pat, M, lps);

    int i = 0; // index for txt[]
    int j = 0; // index for pat[]

    printf("\nKMP Algorithm Matches found at indices: ");

    while (i < N) {
        if (pat[j] == txt[i]) {
            j++;
            i++;
        }

        if (j == M) {
            printf("%d ", i - j);
            j = lps[j - 1];
        } else if (i < N && pat[j] != txt[i]) {
            if (j != 0)
                j = lps[j - 1];
            else
                i++;
        }
    }
    printf("\n");
}

// --------------------------- RABIN-KARP ALGORITHM ---------------------------

// Rabin-Karp Pattern Search
void RabinKarpSearch(char *pat, char *txt, int q) {
    int M = strlen(pat);
    int N = strlen(txt);
    int i, j;
    int p = 0; // hash value for pattern
    int t = 0; // hash value for text
    int h = 1;

    // h = pow(d, M-1) % q
    for (i = 0; i < M - 1; i++)
        h = (h * d) % q;

    // Calculate hash value of pattern and first window of text
    for (i = 0; i < M; i++) {
        p = (d * p + pat[i]) % q;
        t = (d * t + txt[i]) % q;
    }

    printf("\nRabin-Karp Matches found at indices: ");

    // Slide the pattern over text
    for (i = 0; i <= N - M; i++) {
        // Check hash values
        if (p == t) {
            int match = 1;
            for (j = 0; j < M; j++) {
                if (txt[i + j] != pat[j]) {
                    match = 0;
                    break;
                }
            }
            if (match)
                printf("%d ", i);
        }

        // Calculate hash for next window
        if (i < N - M) {
            t = (d * (t - txt[i] * h) + txt[i + M]) % q;

            if (t < 0)
                t = (t + q);
        }
    }
    printf("\n");
}

// --------------------------- MAIN FUNCTION ---------------------------

int main() {
    char text[100], pattern[50];

    printf("Enter the text: ");
    gets(text);

    printf("Enter the pattern: ");
    gets(pattern);

    KMPSearch(pattern, text);
    RabinKarpSearch(pattern, text, PRIME);

    return 0;
}
